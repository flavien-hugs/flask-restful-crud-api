# https://editorconfig.org/

root = true

[*]
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_size = 4
indent_style = space
max_line_length = 119

[*.{html,css,json,yml}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
